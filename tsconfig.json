{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  
  // ✅ 最终修正：同时包含 'src' 文件夹和根目录下所有 TypeScript 文件
  "include": [
    "src/**/*", 
    "*.ts", 
    "*.tsx"
  ],
  
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "vite.config.ts"
  ]
}
